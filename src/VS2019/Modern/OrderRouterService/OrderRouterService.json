{
  "ConnectionStrings": {
    "SQLDB": "Data Source = [ReplaceServer];Database = Modern; Integrated Security = True"
  },



  "AppSettings": {
    "RouterDir": "C:\\SRC\\Legacy-Delivery\\build\\Data\\Router"
